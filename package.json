{
  "name": "choiceats-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "migrate:new": "db-migrate create -m resources/db-migrate/migrations --config resources/db-migrate/database.json",
    "migrate:up": "db-migrate up -m resources/db-migrate/migrations --config=resources/db-migrate/database.json",
    "migrate:down": "db-migrate down -m resources/db-migrate/migrations --config resources/db-migrate/database.json",
    "seed:build": "npm build && babel resources/seed/ --out-dir build/seeder/",
    "seed:run": "node ./build/seeder/seeder.js",
    "standard": "standard",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "babel src --out-dir build",
    "build-full": "rm yarn.lock && yarn install && babel src --out-dir build && git clone https://github.com/choiceats/choiceats tmp-fed && cd tmp-fed && rm yarn.lock && yarn install && yarn build && cp -R build/* ../build && cd .. && rm -rf tmp-fed",
    "build-and-run": "yarn migrate:up && git pull && yarn build-full && yarn start",
    "start": "nodemon build/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.2",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "csprng": "^0.1.2",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "express-graphql": "^0.6.5",
    "graphql": "^0.9.6",
    "graphql-server-express": "^0.7.2",
    "graphql-tools": "^0.11.0",
    "passport": "^0.3.2",
    "passport-http-bearer": "^1.0.1",
    "pg": "^6.2.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-flow": "^6.23.0",
    "db-migrate": "^0.10.0-beta.20",
    "db-migrate-pg": "^0.1.11",
    "eslint-plugin-flowtype": "^2.33.0",
    "flow-bin": "^0.47.0",
    "nodemon": "^1.11.0",
    "standard": "^10.0.2"
  },
  "standard": {
    "plugins": [
      "flowtype"
    ],
    "parser": "babel-eslint",
    "ignore": [
      "/resources/db-migrate/",
      "flow-typed"
    ]
  }
}
